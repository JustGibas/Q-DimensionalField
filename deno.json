{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env server.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test",
    "coverage": "deno coverage",
    "doc": "deno doc",
    "bundle": "deno bundle",
    "upgrade": "deno upgrade",
    "lock": "deno lock",
    "vendor": "deno vendor",
    "info": "deno info",
    "install": "deno install",
    "uninstall": "deno uninstall",
    "update": "deno update",
    "clean": "deno clean",
    "serve": "deno serve",
    "watch": "deno watch",
    "run": "deno run"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "deno.ns"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["src/", "tests/", "backend/", "shared-ui/"],
      "exclude": ["node_modules/"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "test": {
    "include": ["tests/"],
    "exclude": ["node_modules/"]
  },
  "coverage": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "doc": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "bundle": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "upgrade": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "lock": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "vendor": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "info": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "install": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "uninstall": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "update": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "clean": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "watch": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "run": {
    "include": ["src/"],
    "exclude": ["tests/"]
  }
}

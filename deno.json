{
  "tasks": {
    "start": "deno run --allow-net --allow-read web/main.js"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    // Specifies the target ECMAScript version for the emitted JavaScript code
    "target": "ESNext",
    // Specifies the module system to use in the emitted JavaScript code
    "module": "ESNext",
    // Specifies the library files to be included in the compilation
    "lib": ["ESNext", "DOM"],
    // Enables strict type-checking options
    "strict": true,
    // Skips type checking of all declaration files (*.d.ts)
    "skipLibCheck": true,
    // Ensures that file name casing is consistent across the project
    "forceConsistentCasingInFileNames": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["src/", "tests/"],
      "exclude": ["node_modules/"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "test": {
    "include": ["tests/"],
    "exclude": ["node_modules/"]
  },
  "coverage": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "doc": {

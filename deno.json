/**
 * This file contains the configuration options for the Deno runtime.
 * It includes tasks, import maps, compiler options, linting rules, formatting options, testing options, and more.
 * Each configuration option is explained in detail to help students understand its purpose.
 */
{
  "tasks": {
    // The "start" task runs the main.js file with the necessary permissions
    "start": "deno run --allow-net --allow-read web/main.js"
  },
  // Specifies the path to the import map file
  "importMap": "./import_map.json",
  "compilerOptions": {
    // Specifies the target ECMAScript version for the emitted JavaScript code
    "target": "ESNext",
    // Specifies the module system to use in the emitted JavaScript code
    "module": "ESNext",
    // Specifies the library files to be included in the compilation
    "lib": ["ESNext", "DOM"],
    // Enables strict type-checking options
    "strict": true,
    // Skips type checking of all declaration files (*.d.ts)
    "skipLibCheck": true,
    // Ensures that file name casing is consistent across the project
    "forceConsistentCasingInFileNames": true
  },
  "lint": {
    "rules": {
      // Specifies the linting rules to use
      "tags": ["recommended"],
      // Specifies the directories to include in the linting process
      "include": ["src/", "tests/"],
      // Specifies the directories to exclude from the linting process
      "exclude": ["node_modules/"]
    }
  },
  "fmt": {
    "options": {
      // Specifies whether to use tabs for indentation
      "useTabs": false,
      // Specifies the maximum line width
      "lineWidth": 80,
      // Specifies the number of spaces to use for indentation
      "indentWidth": 2,
      // Specifies whether to use single quotes for strings
      "singleQuote": true,
      // Specifies how to wrap prose
      "proseWrap": "preserve"
    }
  },
  "test": {
    // Specifies the directories to include in the testing process
    "include": ["tests/"],
    // Specifies the directories to exclude from the testing process
    "exclude": ["node_modules/"]
  },
  "coverage": {
    // Specifies the directories to include in the coverage report
    "include": ["src/"],
    // Specifies the directories to exclude from the coverage report
    "exclude": ["tests/"]
  },
  "doc": {
    // Specifies the directories to include in the documentation generation
    "include": ["src/"],
    // Specifies the directories to exclude from the documentation generation
    "exclude": ["tests/"]
  },
  "bundle": {
